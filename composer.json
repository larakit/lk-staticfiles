{
    "name": "larakit/lk-staticfiles",
    "description": "[Larakit] Библиотека для Laravel для управления статикой (сборка в один файл, сжатие JS/CSS, добавление хэша в URL для сброса кэша браузера)",
    "keywords": [
        "larakit",
        "laravel",
        "laravel 5",
        "js",
        "css",
        "larastatic"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Alexey Berdnikov",
            "email": "aberdnikov@gmail.com"
        }
    ],
    "require": {
        "laravel/framework": "5.*",
        "larakit/lk-boot": "*",
        "innogames/cssmin": "*",
        "linkorb/jsmin-php": "*"
    },
    "autoload": {
        "psr-4": {
            "Larakit\\StaticFiles\\": "src/StaticFiles"
        },
        "files": [
            "src/init.php"
        ]
    },
    "minimum-stability": "dev"
}
